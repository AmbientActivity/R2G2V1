@{
    ViewBag.Title = "Configurations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document)
        .ready(function() {
            configurations.index.init();
        });
</script>

<div class="row">
    <div class="col-sm-7">
        <h3>System Configuration</h3>
    </div>
    <div class="pull-right" style="margin: 15px 20px 0 0">
        <h4>Currently Active: <i><label id="lblActiveConfigDesc" data-bind="text: selectedConfigDesc" style="color: #265a88"></label></i></h4>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <button id="add" style="margin-bottom: 5px" class="btn btn-success btn-md">Add</button>
        <button id="edit" style="margin-bottom: 5px" class="btn btn-primary btn-md">Edit</button>
        <button id="delete" style="margin-bottom: 5px" class="btn btn-danger btn-md">Delete</button>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-8">
                <select class="form-control" data-bind="options: configs, optionsValue: 'id', optionsText: 'description', value: selectedConfig, event: { change: enableDetail }"></select>
            </div>
            <div class="pull-right" style="margin-right: 20px">
                <button id="add-detail" class="btn btn-success btn-md" data-bind="click: showEditDetailDialog">Add Detail</button>
                <button id="activate" class="btn btn-primary btn-md" data-bind="click: activateSelectedConfig">Activate</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover" id="tblConfigDetail">
                    <thead>
                    <tr>
                        <th class="col-glyphicon"></th>
                        <th class="col-glyphicon"></th>
                        <!-- ko foreach: columns -->
                        <th data-bind="text: title"></th>
                        <!-- /ko -->
                    </tr>
                    </thead>

                    <tbody data-bind="foreach: configDetailsTable">
                    <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                        <!-- ko if: candelete -->
                        <td><a href="#" data-bind="click: $parent.showDeleteDetailDialog, css: 'glyphicon glyphicon-remove'"></a></td>
                        <!-- /ko -->
                        <!-- ko if: !candelete -->
                        <td><span data-bind="css: 'glyphicon glyphicon-flag'"></span></td>
                        <!-- /ko -->
                        <td><a data-bind="attr: { href: '#' }, click: $parent.showEditDetailDialog, css: 'glyphicon glyphicon-pencil'"></a></td>
                        <td data-bind="text: phidgettype"></td>
                        <td data-bind="text: description"></td>
                        <td data-bind="text: responsetype"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
