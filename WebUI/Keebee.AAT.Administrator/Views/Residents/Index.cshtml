@model Keebee.AAT.Administrator.ViewModels.ResidentsViewModel

@{
    ViewBag.Title = "Resident Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Resident Manager</h3>

<script type="text/javascript">
    $(document).ready(function() {
        residents.index.init(
        {
            selectedid: '@Model.SelectedId',
            rfid: '@Model.RfidSearch',
            firstname: '@Model.FirstNameSearch',
            lastname: '@Model.LastNameSearch',
            sortcolumn: '@Model.SortColumnName',
            sortdescending: '@Model.SortDescending'
        });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="nav nav-pills">
            <li>
                <input type="button" class="btn btn-success" value="Add Resident" data-bind="click: showEditDialog"/>
            </li>
            <li>
                <input id="txtSearchRfid" type="text" class="form-control" placeholder="RFID" data-bind="value: rfidSearch, valueUpdate: 'keyup'" />
            </li>
            <li>
                <input id="txtSearchFirstName" type="text" class="form-control" placeholder="First Name" data-bind="value: firstNameSearch, valueUpdate: 'keyup'"/>
            </li>
            <li>
                <input id="txtSearchLastName" type="text" class="form-control" placeholder="Last Name" data-bind="value: lastNameSearch, valueUpdate: 'keyup'"/>
            </li>
            <li class="pull-right record-total">
                <label>Total:</label> <span data-bind="text: totalResidents()"></span>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" id="tblResident">
            <thead>
                <tr>
                    <th class="col-glyphicon"></th>
                    <th class="col-glyphicon"></th>
                    <th class="col-glyphicon"></th>
                    <!-- ko foreach: columns -->
                    <th data-bind="click: $parent.sort, attr: { id: 'resident-col-' + sortKey }"><a href="#" data-bind="text: title"></a></th>
                    <!-- /ko -->
                </tr>
            </thead>

            <tbody data-bind="foreach: residentsTable">
                <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                    <td><a href="#" data-bind="click: $parent.showDeleteDialog, css: 'glyphicon glyphicon-remove'"></a></td>
                    <td><a data-bind="attr: { href: '#' }, click: $parent.showEditDialog, css: 'glyphicon glyphicon-pencil'"></a></td>
                    <td><a data-bind="attr: { href: '#' }, click: $parent.editMedia, css: 'glyphicon glyphicon-cd'"></a></td>
                    <td data-bind="text: id"></td>
                    <td data-bind="text: firstname"></td>
                    <td data-bind="text: lastname"></td>
                    <td data-bind="text: gender"></td>
                    <td data-bind="text: gamedifficultylevel"></td>
                    <!-- ko if: allowvideocapturing -->
                    <td style="text-align: center"><span class="glyphicon glyphicon-ok"></span></td>
                    <!-- /ko -->
                    <!-- ko if: !allowvideocapturing -->
                    <td></td>
                    <!-- /ko -->
                    <td data-bind="text: moment(datecreated).format('ll')"></td>
                    <td data-bind="text: moment(dateupdated).format('ll')"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

