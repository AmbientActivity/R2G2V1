@if (Request.IsAuthenticated)
{
    <script type="text/javascript">
        $(document).ready(function () {
            shared._logonpartial.init();
        });
    </script>

    <ul>
        <li class="dropdown">
            <a href="#" id="menu-login" class="dropdown-toggle" data-toggle="dropdown">Welcome <span>@User.Identity.Name</span><b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><a href="#" id="change-password">Change Password</a></li>
                <li>@Html.ActionLink("Log Off", "LogOff", "Home")</li>
            </ul>
        </li>
    </ul>
}
else
{
    <a id="login" href="javascript:;">Login</a>
}
