
@{
    ViewBag.Title = "Profile Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile Manager</h2>

<script type="text/javascript">
    $(document).ready(function() {
        profiles.index.init();
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="pull-right record-total">
                <label>Total:</label> <span data-bind="text: totalProfiles()"></span>
            </div>
        </div>
        <ul class="nav nav-pills">
            <li>
                <input type="button" class="btn btn-success" value="Add Profile" data-bind="click: showEditDialog" />
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" id="tblProfile">
            <thead>
                <tr>
                    <th class="col-glyphicon"></th>
                    <th class="col-glyphicon"></th>
                    <th class="col-glyphicon"></th>
                </tr>
            </thead>

            <tbody data-bind="foreach: profilesTable">
                <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                    @*<td><a href="#" data-bind="click: $parent.showDeleteDialog, css: 'glyphicon glyphicon-remove'"></a></td>
                    <td><a data-bind="attr: { href: '#' }, click: $parent.showEditDialog, css: 'glyphicon glyphicon-pencil'"></a></td>*@
                    <td data-bind="text: Description"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

