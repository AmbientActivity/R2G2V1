
@{
    ViewBag.Title = "Media File Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Media File Manager</h2>

<script type="text/javascript">
    $(document).ready(function() {
        mediaFiles.index.init();
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="pull-right record-total">
                <label>Total:</label> <span data-bind="text: totalMediaFiles()"></span>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" id="tblMediaFile">
            <thead>
                <tr>
                    <!-- ko foreach: columns -->
                    <th data-bind="text: title"></th>
                    <!-- /ko -->
                </tr>
            </thead>

            <tbody data-bind="foreach: mediaFilesTable">
                <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                    <td data-bind="text: Description"></td>
                    <td data-bind="text: Description"></td>
                    <td data-bind="text: Description"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

