@model Keebee.AAT.Administrator.ViewModels.ResidentMediaViewModel

@{
    ViewBag.Title = "Resident Media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Manage media for <i><b>@Model.FullName</b></i></h3>

<div class="pull-right back-to-residents-container">
    <span id="lblGoBackDisabled" class="link-back-to-residents-disabled" hidden>Back To Residents</span>
    <a id="lnkGoBack" class="link-back-to-residents" href="#" onclick="location.href =
    '@Url.Action("Index", "Residents",
         new
         {
             @id = @Model.ResidentId,
             @rfid = @Model.RfidSearch,
             @firstname = @Model.FirstNameSearch,
             @lastname = @Model.LastNameSearch,
             @sortcolumn = @Model.SortColumn,
             @sortdescending = @Model.SortDescending
         })'">Back To Residents</a>
</div>

<script type="text/javascript">
    $(document)
        .ready(function() {
            residents.media.init({ residentid: '@Model.ResidentId' });
        });
</script>
@{Html.BeginForm();}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="add-button-container">
            <div class="upload-action-container" hidden>
                <button id="uploadbutton" type="button" class="btn btn-md btn-success" onclick="return" false;">@Model.AddButtonText</button>
                <button id="delete" disabled type="button" class="btn btn-md btn-danger" data-bind="click: showDeleteSelectedDialog">Delete Selected</button>
            </div>
            <input id="mediaPathTypeId" name="mediaPathTypeId" type="hidden" value="@Model.SelectedMediaPathType"/>
        </div>

        <ul class="nav nav-pills">
            <li>
                <input id="txtSearchFilename" type="text" class="form-control" placeholder="Name" data-bind="value: filenameSearch, valueUpdate: 'keyup'"/>
            </li>
            <li>
                <select id="ddlMediaPathTypes" class="form-control" data-bind="options: mediaPathTypes, optionsValue: 'id', optionsText: 'description', value: selectedMediaPathType"></select>
            </li>
            <li class="pull-right">
                <label>Total:</label> <span data-bind="text: totalFiles()"></span>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" id="tblFile">
            <thead>
            <tr>
                <th class="col-glyphicon"><input type="checkbox" id="chk_all" data-bind="checked: selectAllIsSelected, click: selectAllRows" /></th>

                <!-- ko if: selectedMediaPathType() === 1 || selectedMediaPathType() === 4 || selectedMediaPathType() === 5 -->
                <th class="col-glyphicon"></th>
                <!-- /ko -->

                <!-- ko foreach: columns -->
                <!-- ko if: !sortable -->
                <th class="col-file" data-bind="text: title"></th>
                <!-- /ko -->
                <!-- ko if: sortable -->
                <th data-bind="click: $parent.sort, attr: { id: 'file-col-' + sortKey } "><a href="#" data-bind="text: title"></a></th>
                <!-- /ko -->
                <!-- /ko -->
            </tr>
            </thead>

            <tbody data-bind="foreach: filesTable">
            <tr data-bind="attr: {id: 'row_' +  id}">
                <td><input type="checkbox" data-bind="attr: { id: 'chk_' + id }, checked: isselected, click: $parent.selectFile" /></td>
                <!-- ko if: $parent.selectedMediaPathType() === 1 || $parent.selectedMediaPathType() === 4 || $parent.selectedMediaPathType() === 5 -->
                <td><a href="#" data-bind="click: $parent.showPreview, css: 'glyphicon glyphicon-eye-open'"></a></td>
                <!-- /ko -->
                <td data-bind="text: filename"></td>
                <td data-bind="text: filetype"></td>
                <td data-bind="text: filesize"></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div id="uploader-html-container" hidden="hidden">
    @Html.Raw(@Model.UploaderHtml)
</div>
@{Html.EndForm();}