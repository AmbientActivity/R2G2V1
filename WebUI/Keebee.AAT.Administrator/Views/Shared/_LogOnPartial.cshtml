@if (Request.IsAuthenticated)
{
    <text>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="javascript:void(0)" id="menu-login login-link" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
                    Welcome @User.Identity.Name<b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="javascript:void(0)" id="change-password">Change Password</a></li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>
                            <a href="javascript:void(0)" id="reset-caregiver">Reset Caregiver</a>
                            <hr />
                        </li>
                    
                    }
                    <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
                </ul>
            </li>
        </ul>
    </text>
    }
    else
    {
    <li>@Html.ActionLink("Login", "Login", "Account")</li>
}

<script type="text/javascript">
        $(document).ready(function () {
            account.services.init();
        });
</script>