@{
    ViewBag.Title = "Configurations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>System Configurations</h3>

<script type="text/javascript">
    $(document)
        .ready(function() {
            configurations.index.init();
        });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        Currently Active: <label id="lblActiveConfigDesc" data-bind="text: selectedConfigDesc"></label>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-10">
                <select class="form-control" data-bind="attr: { id: 'ddlConfigs'}, options: configs, optionsValue: 'id', optionsText: 'description', value: selectedConfig"></select>
            </div>
            <div class="col-sm-2">
                <button id="activate" class="btn btn-primary btn-lg">Activate</button>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover" id="tblConfigDetail">
                    <thead>
                        <tr>
                            <!-- ko foreach: columns -->
                            <th data-bind="text: title"></th>
                            <!-- /ko -->
                        </tr>
                    </thead>

                    <tbody data-bind="foreach: configDetailsTable">
                        <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                            <td data-bind="text: activitytype"></td>
                            <td data-bind="text: responsetype"></td>
                            <td data-bind="text: phidget"></td>
                            <td data-bind="text: issystem"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
