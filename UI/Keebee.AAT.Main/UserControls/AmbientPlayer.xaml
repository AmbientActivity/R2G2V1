<UserControl x:Class="Keebee.AAT.Main.UserControls.AmbientPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keebee.AAT.Main.UserControls"
             mc:Ignorable="d" Height="360" Width="640">
    <Grid>
        <Label x:Name="Invitation" Content="Message" FontSize="40" Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseUp="Invitation_MouseUp"/>
        <MediaElement x:Name="MediaElement" Margin="0" VerticalAlignment="Top" Height="360" Width="640" MediaEnded="MediaElement_MediaEnded"/>
    </Grid>
</UserControl>
