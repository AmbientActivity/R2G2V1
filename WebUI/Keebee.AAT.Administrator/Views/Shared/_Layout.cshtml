@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/CommonStyles")
    @Scripts.Render("~/bundles/Jquery")
    @Scripts.Render("~/bundles/JqueryVal")
    @Scripts.Render("~/bundles/ThirdPartyScripts")
    @Scripts.Render("~/bundles/CustomScripts")
    @Scripts.Render("~/bundles/Modernizr")
    @Scripts.Render("~/bundles/Bootstrap")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-brand">
                @*<a href="~/Home"><img src="~/Content/Images/logo_small.png" alt="" /></a>*@
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul id="main-menu" class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="#" onclick="location.href = '@Url.Action("Index", "Residents")'">Residents</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Event Logs<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View", "Index", "EventLogs")</li>
                            <li>@Html.ActionLink("Export", "Export", "EventLogs")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">System<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Public Media", "Index", "PublicMedia")</li>
                            <li>@Html.ActionLink("Phidget Configuration", "Index", "Configs")</li>
                            <li>@Html.ActionLink("Maintenance", "Index", "Utilities")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Keebee Play</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>