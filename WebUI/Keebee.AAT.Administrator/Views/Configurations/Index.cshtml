@{
    ViewBag.Title = "Configurations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document)
        .ready(function() {
            configurations.index.init();
        });
</script>

<div class="row">
    <div class="col-sm-7">
        <h3>System Configuration</h3>
    </div>
    <div class="pull-right" style="margin: 15px 20px 0 0">
        <h4>Currently Active: <i><label id="lblActiveConfigDesc" data-bind="text: selectedConfigDesc" style="color: #265a88"></label></i></h4>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <button id="add"  style="margin-bottom: 5px" class="btn btn-success btn-md">Add Configuration</button>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-8">
                <select class="form-control" data-bind="attr: { id: 'ddlConfigs' }, options: configs, optionsValue: 'id', optionsText: 'description', value: selectedConfig"></select>
            </div>
            <div class="pull-right" style="margin-right: 20px">
                <button id="add-detail" class="btn btn-success btn-md">Add Detail</button>
                <button id="activate" disabled="disabled" class="btn btn-primary btn-md">Activate</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover" id="tblConfigDetail">
                    <thead>
                    <tr>
                        <th class="col-glyphicon"></th>
                        <th class="col-glyphicon"></th>
                        <th class="col-glyphicon"></th>
                        <!-- ko foreach: columns -->
                        <th data-bind="text: title"></th>
                        <!-- /ko -->
                    </tr>
                    </thead>

                    <tbody data-bind="foreach: configDetailsTable">
                    <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  id}">
                        <td><a href="#" data-bind="click: $parent.showDeleteDialog, css: 'glyphicon glyphicon-remove'"></a></td>
                        <td><a data-bind="attr: { href: '#' }, click: $parent.showEditDialog, css: 'glyphicon glyphicon-pencil'"></a></td>
                        <td><a href="#" data-bind="click: $parent.editProfile">Profile</a></td>
                        <td data-bind="text: phidgettype"></td>
                        <td data-bind="text: activitytype"></td>
                        <td data-bind="text: responsetype"></td>
                        <td><input type="checkbox" data-bind="checked: isuserresponse"/></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
