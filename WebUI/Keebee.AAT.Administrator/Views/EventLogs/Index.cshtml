
@{
    ViewBag.Title = "Event Log Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Event Log Manager</h2>

<script type="text/javascript">
    $(document).ready(function() {
        eventlogs.index.init();
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="pull-right record-total">
                <label>Total:</label> <span data-bind="text: totalEventLogs()"></span>
            </div>
        </div>
        <ul class="nav nav-pills">
            <li>
                <input id="txtSearchFilename" type="text" class="form-control" placeholder="Name" data-bind="value: filenameSearch, valueUpdate: 'keyup'" />
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" id="tblEventLog">
            <thead>
                <tr>
                    <!-- ko foreach: columns -->
                    <th data-bind="click: $parent.sort, attr: { id: 'eventlog-col-' + sortKey } "><a href="#" data-bind="text: title"></a></th>
                    <!-- /ko -->
                </tr>
            </thead>

            <tbody data-bind="foreach: eventLogsTable">
                <tr data-bind="click: $parent.highlightRow, attr: {id: 'row_' +  streamid}">
                    <td><a data-bind="attr: {href: 'Download?streamId='' + streamid + ''''}, text: filename"></a></td>
                    <td data-bind="text: path"></td>
                    <td data-bind="text: filetype"></td>
                    <td data-bind="text: filesize"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

