@model Keebee.AAT.Administrator.ViewModels.LinkedProfilesViewModel
<style>
    #table_wrapper {
        border: 1px solid lightgray;
        float: left;
    }

    #tbody {
        height: 400px;
        overflow-y: auto;
        width: 420px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        font-size: 13px;
    }

    td {
        padding: 1px 5px;
    }

    .td1 {
        width: 30px;
    }

    .td2 {
        width: 360px;
    }
    /* optional */

    #header {
        width: 420px;
    }

        #header div {
            padding: 5px;
            float: left;
            border-right: 1px solid lightgray;
        }

        #header #head1 {
            width: 420px;
            padding-left: 10px;
            background-color: aliceblue;
        }

</style>

<script>
    function chkItemClicked() {
        var filesChecked = $("input[name='shared_files']:checked").length;
        var totalFiles = $("input[name='shared_files']").length;

        if (filesChecked === totalFiles) {
            $("#chkAll").prop("checked", true);
        } else {
            $("#chkAll").prop("checked", false);
        }
    }

    function chkAllClicked() {
        var chkAllIsChecked = $("#chkAll").is(":checked");
        var chkFiles = $("input[name='shared_files']");

        if (chkAllIsChecked === true) {
            $(chkFiles).each(function (item, chk) {
                    $(chk).prop("checked", true);
                });
            } else {
            $(chkFiles).each(function (item, chk) {
                $(chk).prop("checked", false);
            });
        }
    }
</script>

@if (!@Model.Profiles.Any())
            {
    <div>@Model.NoAvailableMediaMessage</div>
}
else
{
    <div id="table_wrapper">
        <div id="header">
            <div id="head1"><b>Profile</b></div>
        </div>
        <div id="tbody">
            <table class="table table-striped table-bordered table-hover" id="tblSharedFile">

                @foreach (var resident in @Model.Profiles)
                {
                    <tr>
                        <td class="td2">
                            @($"{resident.FirstName} {@resident.LastName}")
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
<div style="clear: both"></div>