@if (Request.IsAuthenticated)
{
    <ul>
        <li class="dropdown">
            <a href="#" id="menu-login" class="dropdown-toggle" data-toggle="dropdown">Welcome <span>@User.Identity.Name</span> <i class="fa fa-caret-down"></i></a>
            <ul class="dropdown-menu">
                <li><a href="#" id="change-password">Change Password</a></li>
                <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
            </ul>
        </li>
    </ul>
}
else
{
    <a id="login" href="javascript:;">Login</a>
}

<script type="text/javascript">
        $(document).ready(function () {
            account.utilities.init();
        });
</script>